<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.CustomInfoActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/black"
        android:alpha="0.6"/>
    <RelativeLayout
        android:id="@+id/popupWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        android:background="@drawable/ui_panel_city"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/puzzleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puzzle Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/puzzleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puzzle Desc"
            android:layout_below="@id/puzzleName"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <LinearLayout
            android:id="@+id/puzzleMetaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/puzzleDesc"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/puzzleAuthor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/puzzleCreatedDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/puzzleMetaContainer"
            android:orientation="horizontal">
            <uk.co.jakelee.cityflow.components.TextAwesome
                android:id="@+id/copyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/ui_panel_grey"
                android:text="&#xf24d;"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:onClick="copyPuzzle"/>
            <uk.co.jakelee.cityflow.components.TextAwesome
                android:id="@+id/exportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/ui_panel_grey"
                android:text="&#xf045;"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:onClick="exportPuzzle"/>
            <uk.co.jakelee.cityflow.components.TextAwesome
                android:id="@+id/actionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/ui_panel_blue"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:onClick="performAction"/>
        </LinearLayout>
    </RelativeLayout>
    <uk.co.jakelee.cityflow.components.TextAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf00d;"
        android:textColor="@color/red"
        android:layout_alignTop="@id/popupWrapper"
        android:layout_alignRight="@id/popupWrapper"
        android:textSize="30sp"
        android:onClick="closePopup"
        android:padding="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/ui_panel_grey"/>
</android.support.percent.PercentRelativeLayout>