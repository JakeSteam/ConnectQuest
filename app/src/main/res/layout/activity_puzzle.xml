<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.PuzzleActivity">

    <uk.co.jakelee.cityflow.components.ZoomableViewGroup
        android:id="@+id/tileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/blockingMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/initialCountdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/initialCountdownText"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="160sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:alpha="0.6"
                android:gravity="center"
                android:onClick="suppressClick"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pauseScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <TextView
                android:id="@+id/pauseScreenText"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="160sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:alpha="0.6"
                android:gravity="center"
                android:onClick="suppressClick"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/endGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            android:onClick="closePuzzle"
            android:visibility="invisible">
            <LinearLayout
                android:id="@+id/starContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/starCompletion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ui_star_unachieved"/>
                <ImageView
                    android:id="@+id/starTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ui_star_unachieved"/>
                <ImageView
                    android:id="@+id/starMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ui_star_unachieved"/>
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/starContainer"
                android:stretchColumns="*"
                android:shrinkColumns="*">
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text=""/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Time"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Moves"/>
                </TableRow>
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Current"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/currentTime"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/currentMoves"/>
                </TableRow>
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Best"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/bestTime"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/bestMoves"/>
                </TableRow>
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Par"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/parTime"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/parMoves"/>
                </TableRow>
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text=""/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text=""/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text="Tiles"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:id="@+id/tilesUnlocked"/>
                    <uk.co.jakelee.cityflow.components.TextViewFontEndGame
                        android:text=""/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/undoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/grey"
        android:gravity="left"
        android:text="Boosts"
        android:onClick="undoLastMove"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ui_button_grey"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/puzzleTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="55sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/zoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="+"
        android:onClick="zoomIn"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ui_button_grey"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/zoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="-"
        android:onClick="zoomOut"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/zoomIn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ui_button_grey"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/moveCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:text="0"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>
</RelativeLayout>