<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemWrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/ltltgrey">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/currencyImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/itemImage"
        android:layout_below="@id/itemImage"
        android:layout_margin="5dp"
        android:src="@drawable/ui_currency" />

    <uk.co.jakelee.cityflow.components.TextViewFont
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemImage"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/currencyImage"
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>
