<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.EditorMenuActivity">

    <ScrollView
        android:id="@+id/popupWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/city"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/playPuzzle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="playPuzzle"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/changePuzzleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="changePuzzleName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/changePuzzleDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="changePuzzleDesc"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/shufflePuzzle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="shufflePuzzle"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/rotatePuzzle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="rotatePuzzle"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/changePuzzleSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="changePuzzleSize"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <uk.co.jakelee.cityflow.components.TextViewFont
                android:id="@+id/savePuzzle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:onClick="savePuzzle"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <uk.co.jakelee.cityflow.components.TextAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/popupWrapper"
        android:layout_alignTop="@id/popupWrapper"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="-5dp"
        android:background="@color/ltltgrey"
        android:clickable="true"
        android:onClick="closePopup"
        android:padding="10dp"
        android:text="@string/icon_cross"
        android:textColor="@color/red"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/croutonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"></LinearLayout>
</android.support.percent.PercentRelativeLayout>