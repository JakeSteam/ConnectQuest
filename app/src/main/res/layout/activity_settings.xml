<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".main.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_marginPercent="7%">

            <!-- Sounds -->
            <TableLayout
                android:background="@drawable/ui_panel_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_span="2"
                        android:text="Audio Settings"
                        android:textColor="@color/black"
                        android:textSize="28sp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/soundToggleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Sounds"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/soundToggleButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-5dp"
                        android:onClick="toggleSetting"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/musicToggleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Music"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/musicToggleButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-5dp"
                        android:onClick="toggleSetting"/>
                </TableRow>
            </TableLayout>

            <!-- Gameplay -->
            <TableLayout
                android:background="@drawable/ui_panel_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_span="2"
                        android:text="Gameplay Settings"
                        android:textColor="@color/black"
                        android:textSize="28sp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/zenToggleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Zen Mode"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/zenToggleButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-5dp"
                        android:onClick="toggleSetting"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/hideBoostText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Hide Empty Boosts"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/hideBoostButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-5dp"
                        android:onClick="toggleSetting"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/playerNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/playerNameDisplay"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-5dp"
                        android:onClick="changeText"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.percent.PercentRelativeLayout>