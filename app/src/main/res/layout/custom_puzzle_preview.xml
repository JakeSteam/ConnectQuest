<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/puzzleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_panel_grey"
    android:padding="7dp">
    <TextView
        android:id="@+id/puzzleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:singleLine="false"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:textColor="@color/black"/>
    <uk.co.jakelee.cityflow.components.TextAwesome
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/puzzleName"
        android:layout_margin="3dp"
        android:padding="7dp"
        android:textSize="26sp"
        android:text="&#xf1f8;"
        android:background="@drawable/ui_panel_orange"
        android:textColor="@color/black"/>
    <uk.co.jakelee.cityflow.components.TextAwesome
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/puzzleName"
        android:layout_toRightOf="@id/deleteButton"
        android:layout_margin="3dp"
        android:padding="7dp"
        android:textSize="26sp"
        android:text="&#xf141;"
        android:background="@drawable/ui_panel_grey"
        android:textColor="@color/black"
        android:onClick="showInfo"/>
    <TextView
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/puzzleName"
        android:layout_toRightOf="@id/moreButton"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:textSize="26sp"
        android:gravity="center_horizontal"
        android:background="@drawable/ui_panel_blue"
        android:textColor="@color/black"/>
</RelativeLayout>